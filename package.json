{
  "name": "favorite-files",
  "displayName": "Favorite Files",
  "description": "Favorite files and folders",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "favorite-files-container",
          "title": "Favorites",
          "icon": "media/star.svg"
        }
      ]
    },
    "views": {
      "favorite-files-container": [
        {
          "id": "favorite-files-view",
          "name": "Favorite Files",
          "contextualTitle": "Favorites"
        }
      ]
    },
    "commands": [
      {
        "command": "favorite-files.add",
        "title": "Add to Favorites"
      },
      {
        "command": "favorite-files.refresh",
        "title": "Refresh Favorites",
        "icon": "$(refresh)"
      },
      {
        "command": "favorite-files.createGroup",
        "title": "Create Group",
        "icon": "$(add)"
      },
      {
        "command": "favorite-files.renameGroup",
        "title": "Rename Group"
      },
      {
        "command": "favorite-files.deleteGroup",
        "title": "Delete Group"
      },
      {
        "command": "favorite-files.removeFavorite",
        "title": "Remove Favorite"
      },
      {
        "        command": "favorite-files.addFileToGroup",
        "title": "Add File to Group",
        "icon": "$(add)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "favorite-files.refresh",
          "when": "view == favorite-files-view",
          "group": "navigation"
        },
        {
          "command": "favorite-files.createGroup",
          "when": "view == favorite-files-view",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "command": "favorite-files.add",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "favorite-files.addFileToGroup",
          "when": "view == favorite-files-view && viewItem == group",
          "group": "inline"
        },
        {
          "command": "favorite-files.renameGroup",
          "when": "view == favorite-files-view && viewItem == group",
          "group": "navigation"
        },
        {
          "command": "favorite-files.deleteGroup",
          "when": "view == favorite-files-view && viewItem == group",
          "group": "navigation"
        },
        {
          "command": "favorite-files.removeFavorite",
          "when": "view == favorite-files-view && viewItem == file",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
